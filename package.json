{
  "name": "langchain-voice-agent-node",
  "version": "1.0.0",
  "description": "Real-time voice agent with LangChain, AssemblyAI STT, and Inworld TTS",
  "private": true,
  "type": "module",
  "workspaces": ["src/frontend"],
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:frontend && tsc",
    "build:frontend": "npm run build -w src/frontend",
    "start": "node dist/index.js",
    "dev": "npm run build:frontend && nodemon --exec \"tsx src/backend/index.ts\" --ext ts --ignore src/frontend/",
    "lint": "eslint . --ignore-pattern src/frontend/",
    "lint:fix": "eslint . --fix --ignore-pattern src/frontend/",
    "format": "prettier --write \"src/backend/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"src/backend/**/*.{ts,tsx,js,jsx,json}\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/node-ws": "^1.2.0",
    "@langchain/anthropic": "^1.2.1",
    "@langchain/core": "^1.1.0",
    "@langchain/langgraph": "^1.0.2",
    "dotenv": "^17.2.3",
    "hono": "^4.12.0",
    "langchain": "^1.1.1",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.18.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
